pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Jashwanth-DevOps/DD-curd-app.git'
            }
        }

        stage('Build & Push') {
            steps {
                script {
                    docker.withRegistry('', 'docker-hub-creds') {
                        sh "docker build -t jashwanth112002/backend:latest ./backend"
                        sh "docker push jashwanth112002/backend:latest"

                        sh "docker build -t jashwanth112002/frontend:latest ./frontend"
                        sh "docker push jashwanth112002/frontend:latest"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                
                sh "docker compose pull"
                sh "docker compose up -d"
            }
        }
    }

    post {
        always {
            sh "docker logout"
            sh "docker image prune -f"
        }
    }
}
